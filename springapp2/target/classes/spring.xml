<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="client" class="com.ua.spring.beans.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="J.Smith"/>
    </bean>

    <bean id="eventLogger" class="com.ua.spring.loggers.ConsoleEventLogger"/>


    <bean id="event" class="com.ua.spring.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean id="dateFormat"
                  class="java.text.DateFormat"
                  factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

    <bean id="fileEventLogger" class="com.ua.spring.loggers.FileEventLogger">
        <constructor-arg value="fileLog.txt"/>
    </bean>

    <bean id="app" class="com.ua.spring.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>


</beans>